@model StudentViewModel

@{ ViewData["Title"] = "Details"; }

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="GroupName"></label>
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Groups" asp-action="Details" asp-route-id="@Model.GroupId"></a>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="FullName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.FullName
        </dd>
        <dt class="col-sm-2">
            <label asp-for="PhoneNumber"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.PhoneNumber
        </dd>
        <dt class="col-sm-2">
            <label asp-for="RecordNumber"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.RecordNumber
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id"></a>|
