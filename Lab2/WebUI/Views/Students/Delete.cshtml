@model StudentViewModel

@{ ViewData["Title"] = "Delete"; }

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="GroupName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.GroupName
        </dd>
        <dt class="col-sm-2">
            <label asp-for="FullName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.FullName
        </dd>
        <dt class="col-sm-2">
            <label asp-for="PhoneNumber"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.PhoneNumber
        </dd>
        <dt class="col-sm-2">
            <label asp-for="RecordNumber"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.RecordNumber
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>